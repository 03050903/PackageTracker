<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<!-- Widget -->
	<style name="Widget.ButtonBar" parent="">
		<item name="leftText">@string/buttonbar_default_left</item>
		<item name="rightText">@string/buttonbar_default_right</item>
		<item name="leftEnabled">true</item>
		<item name="rightEnabled">true</item>
	</style>

</resources>
